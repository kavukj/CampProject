<%- include("header") %>
<div class="container">
	<Header class="jumbotron">
		<H1>
			<span class="glyphicon glyphicon-fire" aria-hidden="true"></span>
			Welcome to CampGround Page
		</H1>
		<div class="container">
			<p>View some our hand Picked campgrounds !!</p>
			<p>
				<a class="btn btn-primary btn-md" href="/campgrounds/new">Add New CampGrounds</a>
			</p>
		</div>
		
	</Header>
	<div class="row text-center" style="display:flex; flex-wrap:wrap;">
		<% campground.forEach(function(camp){ %>
			<div class="col-lg-3 col-md-4 col-sm-6">
				<div class="thumbnail">
					<img src = "<%= camp.img %>">	
					<div class="caption">
						<h4>
							<%= camp.name %>
						</h4>
						<a class="btn btn-primary btn-sm" href="/campgrounds/<%= camp._id%>" >Show Details</a>
					</div>
				</div>
			</div>
		<% }) %>
	</div>
</div>

<Hr>	
<footer class="container text-center"><%- include("footer") %></footer>
